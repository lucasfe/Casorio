<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="7.79"
        android:orientation="vertical" >
        
         <TextView
             android:id="@+id/guest_view_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Name" />
         
         <TextView
             android:id="@+id/guest_view_status"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Status" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="7.79"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/guest_view_additional_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convidados Adicionais" />
        
        <TextView
            android:id="@+id/guest_view_addtional_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />
        



    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:contentDescription="@string/guest_invite_number_image_description"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="8.30"
        android:background="#dbdbdb"
        android:padding="10dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/guest_view_number_of_guests_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/guest_invite_number_image_description"
            android:paddingTop="4dp"
            android:src="@drawable/social_person" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="126.57"
        android:padding="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/guest_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/guest_view_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9fc4c6"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="8.30"
        android:padding="10dp"
        
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/guest_view_info_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:contentDescription="@string/guest_info_image_description"
            android:paddingTop="4dp"
            android:src="@drawable/action_about" />

    </LinearLayout>

</LinearLayout>
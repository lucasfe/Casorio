<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_liner_layout"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/home_drawer_menu_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="@string/empyt"
        android:maxHeight="32dp"
        android:maxWidth="32dp"
        android:scaleType="center"
        android:src="@drawable/home_menu_home_icon" />

    <TextView
        android:id="@+id/home_drawer_menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/home_drawer_menu_image"
        android:paddingLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>